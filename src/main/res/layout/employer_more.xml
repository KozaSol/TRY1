<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05354c"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/emp_chooselanguages_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#092938"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/layoutmargintop"
                android:layout_weight="0.10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/myprofile_icon" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.jobsearchtry.utils.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_gravity="center|start"
                    android:layout_marginLeft="@dimen/marginleftright"
                    android:layout_weight="0.1"
                    android:text="@string/chooselanguages"
                    android:textColor="#fff"
                    android:textSize="@dimen/Text_size"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />

                <com.jobsearchtry.utils.MyTextView
                    android:id="@+id/emp_changelangtamil"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_gravity="center|start"
                    android:layout_marginLeft="@dimen/marginleftright"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.1"
                    android:text="@string/changelangtamil"
                    android:textColor="#fff"
                    android:visibility="gone"
                    android:textSize="@dimen/Text_size"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emp_myprofile_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cpb_stroke_width"
            android:background="#092938"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/layoutmargintop"
                android:layout_weight="0.10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/myprofile_icon" />

            <com.jobsearchtry.utils.MyTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/marginleftright"
                android:layout_weight="1"
                android:text="@string/myprofile"
                android:textColor="#fff"
                android:textSize="@dimen/Text_size"
                customfontdemo:fontName="MyriadPro-Cond.ttf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emp_favourities_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cpb_stroke_width"
            android:background="#092938"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/layoutmargintop"
                android:layout_weight="0.10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/yellow_star_icon" />

            <com.jobsearchtry.utils.MyTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/marginleftright"
                android:layout_weight="1"
                android:text="@string/favourites"
                android:textColor="#fff"
                android:textSize="@dimen/Text_size"
                customfontdemo:fontName="MyriadPro-Cond.ttf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emp_changepassword_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cpb_stroke_width"
            android:background="#092938"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/layoutmargintop"
                android:layout_weight="0.10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/cp_y_icon" />

            <com.jobsearchtry.utils.MyTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/marginleftright"
                android:layout_weight="1"
                android:text="@string/changepassword"
                android:textColor="#fff"
                android:textSize="@dimen/Text_size"
                customfontdemo:fontName="MyriadPro-Cond.ttf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emp_aboutus_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cpb_stroke_width"
            android:background="#092938"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/layoutmargintop"
                android:layout_weight="0.10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/about_yel" />

            <com.jobsearchtry.utils.MyTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/marginleftright"
                android:layout_weight="1"
                android:text="@string/about_us"
                android:textColor="#fff"
                android:textSize="@dimen/Text_size"
                customfontdemo:fontName="MyriadPro-Cond.ttf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emp_contact_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cpb_stroke_width"
            android:background="#092938"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/layoutmargintop"
                android:layout_weight="0.10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/contact_yel" />

            <com.jobsearchtry.utils.MyTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/marginleftright"
                android:layout_weight="1"
                android:text="@string/contactus"
                android:textColor="#fff"
                android:textSize="@dimen/Text_size"
                customfontdemo:fontName="MyriadPro-Cond.ttf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emp_feedback_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cpb_stroke_width"
            android:background="#092938"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/layoutmargintop"
                android:layout_weight="0.10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/feedback_yel" />

            <com.jobsearchtry.utils.MyTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/marginleftright"
                android:layout_weight="1"
                android:text="@string/feedback"
                android:textColor="#fff"
                android:textSize="@dimen/Text_size"
                customfontdemo:fontName="MyriadPro-Cond.ttf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emp_logout_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cpb_stroke_width"
            android:background="#092938"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logout_image"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/layoutmargintop"
                android:layout_weight="0.10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/mylogin_icon" />

            <com.jobsearchtry.utils.MyTextView
                android:id="@+id/emp_logout"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/marginleftright"
                android:layout_weight="1"
                android:text="@string/logout"
                android:textColor="#fff"
                android:textSize="@dimen/Text_size"
                customfontdemo:fontName="MyriadPro-Cond.ttf" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>