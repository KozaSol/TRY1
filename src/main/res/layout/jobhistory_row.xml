<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_appliedhistory"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginlr"
        android:orientation="vertical">

        <com.jobsearchtry.utils.MyTextView
            android:id="@+id/apply_history_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layoutmargintop"
            android:textColor="#006292"
            android:textSize="@dimen/notify_txt"
            customfontdemo:fontName="MyriadPro-Cond.ttf" />

        <com.jobsearchtry.utils.MyTextView
            android:id="@+id/apply_history_companyname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="@dimen/jsMyprof_normaltext"
            customfontdemo:fontName="MyriadPro-Cond.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/searchtop"
            android:paddingTop="@dimen/top">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:gravity="start"
                android:orientation="horizontal">

                <com.jobsearchtry.utils.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:text="@string/appliedon"
                    android:textColor="#745a01"
                    android:textSize="@dimen/txtSizeMedium"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />

                <com.jobsearchtry.utils.MyTextView
                    android:id="@+id/appliedon_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="#85b000"
                    android:textSize="@dimen/txtSizeMedium"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.9"
                android:gravity="start"
                android:orientation="horizontal">

                <com.jobsearchtry.utils.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:text="@string/currentstatus"
                    android:textColor="#745a01"
                    android:textSize="@dimen/txtSizeMedium"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />

                <com.jobsearchtry.utils.MyTextView
                    android:id="@+id/currentstatus_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="#ff0000"
                    android:textSize="@dimen/txtSizeMedium"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonHeightSmall"
        android:layout_marginBottom="@dimen/top"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/applied_sms"
            android:layout_width="0dip"
            android:layout_height="@dimen/applied_buttonsize"
            android:layout_marginBottom="@dimen/subheaddivide"
            android:layout_marginLeft="@dimen/top"
            android:layout_weight="1"
            android:background="@drawable/js_historyshape"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/applyhis_email"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="14.67dp"
                android:layout_weight="0.2"
                android:clickable="false"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@drawable/email_icon" />

            <com.jobsearchtry.utils.MyButton
                android:id="@+id/email_button"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.67dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:clickable="false"
                android:gravity="left|center"
                android:text="@string/sendemail"
                android:textColor="#000"
                android:textSize="@dimen/js_historytext"
                customfontdemo:fontName="MyriadPro-Cond.ttf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/applied_call"
            android:layout_width="0dip"
            android:layout_height="@dimen/applied_buttonsize"
            android:layout_marginBottom="@dimen/subheaddivide"
            android:layout_marginLeft="@dimen/top"
            android:layout_marginRight="@dimen/top"
            android:layout_weight="1"
            android:background="@drawable/js_historyshape"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/applyhis_call"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="14.67dp"
                android:layout_weight="0.2"
                android:clickable="false"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@drawable/call_icon" />

            <com.jobsearchtry.utils.MyButton
                android:id="@+id/call_button"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.67dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:clickable="false"
                android:gravity="left|center"
                android:text="@string/callemp"
                android:textColor="#fefefe"
                android:textSize="@dimen/js_historytext"
                customfontdemo:fontName="MyriadPro-Cond.ttf" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>