<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="8.12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="4.87"
        android:background="@drawable/yellowbg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/yellow_topnbottom"
            android:layout_marginLeft="@dimen/marginleftright"
            android:layout_marginTop="@dimen/yellow_topnbottom"
            android:contentDescription="@string/app_name"
            android:src="@drawable/education_b_icon" />

        <com.jobsearchtry.utils.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/yellow_topnbottom"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/education"
            android:textColor="#000"
            android:textSize="@dimen/textSizeAverage"
            customfontdemo:fontName="MyriadPro-BoldCond.otf" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="86.01"
        android:background="#e0dacc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/js_Marginright"
            android:layout_marginRight="@dimen/js_Marginright"
            android:layout_marginTop="@dimen/buttonHeightSmall"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/editboxheight"
                android:orientation="horizontal">

                <com.jobsearchtry.utils.MyTextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.40"
                    android:gravity="center_vertical"
                    android:text="@string/qualificationlevel"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/Text_size"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />

                <LinearLayout
                    android:id="@+id/edit_js_edit_edu_add_quali_lay"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.60"
                    android:background="@drawable/border_edittext"
                    android:orientation="horizontal">

                    <com.jobsearchtry.utils.MyButton
                        android:id="@+id/edit_js_edit_edu_add_quali"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:padding="@dimen/editboxpadding"
                        android:text="@string/selectquali"
                        android:textColor="#086fa1"
                        android:textSize="@dimen/Text_size"
                        customfontdemo:fontName="MyriadPro-Cond.ttf" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_edittext"
                        android:clickable="false"
                        android:contentDescription="@string/app_name"
                        android:padding="@dimen/editboxpadding"
                        android:scaleType="fitCenter"
                        android:src="@drawable/arrow_down_float" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/specilayedit"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/editboxheight"
                android:layout_marginTop="@dimen/about_trytop"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.jobsearchtry.utils.MyTextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.40"
                    android:gravity="center_vertical"
                    android:text="@string/specialisation"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/Text_size"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />

                <LinearLayout
                    android:id="@+id/edit_js_edit_edu_speci_lay"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.60"
                    android:background="@drawable/border_edittext"
                    android:orientation="horizontal">

                    <com.jobsearchtry.utils.MyButton
                        android:id="@+id/edit_js_edit_edu_speci"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:padding="@dimen/editboxpadding"
                        android:text="@string/selectspec"
                        android:textColor="#086fa1"
                        android:textSize="@dimen/Text_size"
                        customfontdemo:fontName="MyriadPro-Cond.ttf" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_edittext"
                        android:clickable="false"
                        android:contentDescription="@string/app_name"
                        android:padding="@dimen/editboxpadding"
                        android:scaleType="fitCenter"
                        android:src="@drawable/arrow_down_float" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/editboxheight"
                android:layout_marginTop="@dimen/about_trytop"
                android:orientation="horizontal">

                <com.jobsearchtry.utils.MyTextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.40"
                    android:gravity="center_vertical"
                    android:text="@string/institute"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/Text_size"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />

                <com.jobsearchtry.utils.MyEditText
                    android:id="@+id/edit_js_edit_edu_institutename"
                    style="@style/App_EditTextStyle"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.60"
                    android:hint="@string/institute"
                    android:inputType="text"
                    android:textSize="@dimen/Text_size"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/editboxheight"
                android:layout_marginTop="@dimen/about_trytop"
                android:orientation="horizontal">

                <com.jobsearchtry.utils.MyTextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.40"
                    android:gravity="center_vertical"
                    android:text="@string/coursetype"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/Text_size"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />

                <LinearLayout
                    android:id="@+id/edit_js_edit_edu_coursetype_lay"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.60"
                    android:background="@drawable/border_edittext"
                    android:orientation="horizontal">

                    <com.jobsearchtry.utils.MyButton
                        android:id="@+id/edit_js_edit_edu_coursetype"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:padding="@dimen/editboxpadding"
                        android:text="@string/selectcoursetype"
                        android:textColor="#086fa1"
                        android:textSize="@dimen/Text_size"
                        customfontdemo:fontName="MyriadPro-Cond.ttf" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_edittext"
                        android:clickable="false"
                        android:contentDescription="@string/app_name"
                        android:padding="@dimen/editboxpadding"
                        android:scaleType="fitCenter"
                        android:src="@drawable/arrow_down_float" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/editboxheight"
                android:layout_marginTop="@dimen/about_trytop"
                android:orientation="horizontal">

                <com.jobsearchtry.utils.MyTextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.40"
                    android:gravity="center_vertical"
                    android:text="@string/passedoutyear"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/Text_size"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />

                <LinearLayout
                    android:id="@+id/edit_js_edit_edu_passoutyear_lay"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.60"
                    android:background="@drawable/border_edittext"
                    android:orientation="horizontal">

                    <com.jobsearchtry.utils.MyButton
                        android:id="@+id/edit_js_edit_edu_passoutyear"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:padding="@dimen/editboxpadding"
                        android:text="@string/selectpassoutyear"
                        android:textColor="#086fa1"
                        android:textSize="@dimen/Text_size"
                        customfontdemo:fontName="MyriadPro-Cond.ttf" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_edittext"
                        android:clickable="false"
                        android:contentDescription="@string/app_name"
                        android:padding="@dimen/editboxpadding"
                        android:scaleType="fitCenter"
                        android:src="@drawable/arrow_down_float" />
                </LinearLayout>
            </LinearLayout>

            <com.jobsearchtry.utils.MyButton
                android:id="@+id/js_try_Education_Edit_Submit"
                style="@style/App_ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/buttonHeightLarge"
                android:layout_marginTop="@dimen/buttonHeightSmall"
                android:text="@string/submit"
                customfontdemo:fontName="MyriadPro-BoldCond.otf" />
        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/bottomblue_footer"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />
</LinearLayout>