<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/myprof_left"
    android:layout_marginRight="@dimen/marginleftright"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.jobsearchtry.utils.MyTextView
            android:id="@+id/skill_course"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="3.5dp"
            android:layout_weight="0.87"
            android:gravity="center|start"
            android:maxLines="1"
            android:textColor="#7e7e7e"
            android:textSize="@dimen/emp_detailtxtsize"
            customfontdemo:fontName="MyriadPro-Cond.ttf" />

        <ImageButton
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/layoutmargintop"
            android:layout_weight="0.07"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/remove_icon"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/skill_editicon"
            android:layout_width="0dip"
            android:layout_height="@dimen/editicon_left"
            android:layout_gravity="center|end"
            android:layout_marginBottom="@dimen/top"
            android:layout_marginLeft="@dimen/layoutmargintop"
            android:layout_marginRight="@dimen/myprof_right"
            android:layout_weight="0.10"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:scaleType="fitEnd"
            android:src="@drawable/edit_icon" />
    </LinearLayout>

</LinearLayout>