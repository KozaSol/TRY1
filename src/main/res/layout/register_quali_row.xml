<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listbox"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.80"
        android:orientation="horizontal">

        <com.jobsearchtry.utils.MyTextView
            android:id="@+id/rq_editjob_skill_catename"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:paddingLeft="@dimen/marginl"
            android:textColor="#161616"
            android:textSize="@dimen/Filter_Buttonsize"
            customfontdemo:fontName="MyriadPro-Cond.ttf" />

        <com.jobsearchtry.utils.MyTextView
            android:id="@+id/rq_editjob_skillcate_skillname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:maxLines="1"
            android:paddingLeft="@dimen/layoutmargintop"
            android:textColor="#47a4c7"
            android:textSize="@dimen/Filter_Buttonsize"
            customfontdemo:fontName="MyriadPro-Cond.ttf" />
    </LinearLayout>

    <ImageView
        android:id="@+id/specfiavail"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.10"
        android:gravity="center"
        android:paddingRight="@dimen/marginl"
        android:src="@drawable/locationarror"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/specfinone"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.10"
        android:button="@drawable/login_checkbox"
        android:gravity="center"
        android:paddingRight="@dimen/marginl"
        android:visibility="gone" />
</LinearLayout>



