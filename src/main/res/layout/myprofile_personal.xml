<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="8.12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="4.87"
        android:background="@drawable/yellowbg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/yellow_topnbottom"
            android:layout_marginLeft="@dimen/marginleftright"
            android:layout_marginTop="@dimen/yellow_topnbottom"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/username_icon" />

        <com.jobsearchtry.utils.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/yellow_topnbottom"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/personal"
            android:textColor="#000"
            android:textSize="@dimen/textSizeAverage"
            customfontdemo:fontName="MyriadPro-BoldCond.otf" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="86.01"
        android:background="#e0dacc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/js_Marginright"
            android:layout_marginRight="@dimen/js_Marginright"
            android:layout_marginTop="@dimen/buttonHeightSmall"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/editboxheight"
                android:orientation="horizontal">

                <com.jobsearchtry.utils.MyTextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.30"
                    android:gravity="center_vertical"
                    android:text="@string/username"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/Text_size"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />

                <com.jobsearchtry.utils.MyEditText
                    android:id="@+id/js_edit_personal_username"
                    style="@style/App_EditTextStyle"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.65"
                    android:hint="@string/username"
                    android:inputType="textCapWords"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/editboxheight"
                android:layout_marginTop="@dimen/about_trytop"
                android:orientation="horizontal">

                <com.jobsearchtry.utils.MyTextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.30"
                    android:gravity="center_vertical"
                    android:text="@string/role"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/Text_size"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />

                <LinearLayout
                    android:id="@+id/js_edit_personal_role_lay"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.65"
                    android:background="@drawable/border_edittext"
                    android:orientation="horizontal">

                    <com.jobsearchtry.utils.MyButton
                        android:id="@+id/js_edit_personal_role"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:padding="@dimen/editboxpadding"
                        android:text="@string/selectrole"
                        android:textColor="#086fa1"
                        android:textSize="@dimen/Text_size"
                        customfontdemo:fontName="MyriadPro-Cond.ttf" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_edittext"
                        android:clickable="false"
                        android:contentDescription="@string/app_name"
                        android:padding="@dimen/editboxpadding"
                        android:scaleType="fitCenter"
                        android:src="@drawable/arrow_down_float" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/editboxheight"
                android:layout_marginTop="@dimen/about_trytop"
                android:orientation="horizontal">

                <com.jobsearchtry.utils.MyTextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.30"
                    android:gravity="center_vertical"
                    android:text="@string/phoneno"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/Text_size"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />

                <com.jobsearchtry.utils.MyEditText
                    android:id="@+id/js_edit_personal_phonenumber"
                    style="@style/App_EditTextStyle"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.65"
                    android:hint="@string/phoneno"
                    android:inputType="number"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/editboxheight"
                android:layout_marginTop="@dimen/about_trytop"
                android:orientation="horizontal">

                <com.jobsearchtry.utils.MyTextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.30"
                    android:gravity="center_vertical"
                    android:text="@string/emailid"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/Text_size"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />

                <com.jobsearchtry.utils.MyEditText
                    android:id="@+id/js_edit_personal_emailaddress"
                    style="@style/App_EditTextStyle"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.65"
                    android:hint="@string/emailid"
                    android:inputType="textEmailAddress"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/editboxheight"
                android:layout_marginTop="@dimen/about_trytop"
                android:orientation="horizontal">

                <com.jobsearchtry.utils.MyTextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.30"
                    android:gravity="center_vertical"
                    android:text="@string/currentlocation"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/Text_size"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />

                <com.jobsearchtry.utils.CustomAutoCompleteTextView
                    android:id="@+id/js_edit_personal_location"
                    style="@style/App_EditTextStyle"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.65"
                    android:hint="@string/currentlocation"
                    android:inputType="textAutoComplete"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/editboxheight"
                android:layout_marginTop="@dimen/about_trytop"
                android:orientation="horizontal">

                <com.jobsearchtry.utils.MyTextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.30"
                    android:gravity="center_vertical"
                    android:text="@string/gender"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/Text_size"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />

                <LinearLayout
                    android:id="@+id/js_edit_personal_gender_lay"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.65"
                    android:background="@drawable/border_edittext"
                    android:orientation="horizontal">

                    <com.jobsearchtry.utils.MyButton
                        android:id="@+id/js_edit_personal_gender"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:padding="@dimen/editboxpadding"
                        android:text="@string/selectgender"
                        android:textColor="#086fa1"
                        android:textSize="@dimen/Text_size"
                        customfontdemo:fontName="MyriadPro-Cond.ttf" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_edittext"
                        android:clickable="false"
                        android:contentDescription="@string/app_name"
                        android:padding="@dimen/editboxpadding"
                        android:scaleType="fitCenter"
                        android:src="@drawable/arrow_down_float" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/editboxheight"
                android:layout_marginTop="@dimen/about_trytop"
                android:orientation="horizontal">

                <com.jobsearchtry.utils.MyTextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.30"
                    android:gravity="center_vertical"
                    android:text="@string/dob"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/Text_size"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />

                <com.jobsearchtry.utils.MyEditText
                    android:id="@+id/js_edit_personal_dob"
                    style="@style/App_EditTextStyle"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.65"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/dob"
                    android:inputType="number"
                    android:minWidth="@dimen/buttonHeight"
                    android:windowSoftInputMode="stateHidden"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/editboxheight"
                android:layout_marginTop="@dimen/about_trytop"
                android:orientation="horizontal">

                <com.jobsearchtry.utils.MyTextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.30"
                    android:gravity="center_vertical"
                    android:text="@string/age"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/Text_size"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />

                <com.jobsearchtry.utils.MyEditText
                    android:id="@+id/js_edit_personal_age"
                    style="@style/App_EditTextStyle"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.65"
                    android:enabled="false"
                    android:hint="@string/age"
                    android:inputType="number"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/editboxheight"
                android:layout_marginTop="@dimen/about_trytop"
                android:orientation="horizontal">

                <com.jobsearchtry.utils.MyTextView
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.30"
                    android:gravity="center_vertical"
                    android:text="@string/langknown"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/Text_size"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />

                <LinearLayout
                    android:id="@+id/js_edit_personal_languages_lay"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.65"
                    android:background="@drawable/border_edittext"
                    android:orientation="horizontal">

                    <com.jobsearchtry.utils.MyButton
                        android:id="@+id/js_edit_personal_languages"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:padding="@dimen/editboxpadding"
                        android:text="@string/select"
                        android:textColor="#086fa1"
                        android:textSize="@dimen/Text_size"
                        customfontdemo:fontName="MyriadPro-Cond.ttf" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_edittext"
                        android:clickable="false"
                        android:contentDescription="@string/app_name"
                        android:padding="@dimen/editboxpadding"
                        android:scaleType="fitCenter"
                        android:src="@drawable/arrow_down_float" />
                </LinearLayout>
            </LinearLayout>

            <com.jobsearchtry.utils.MyButton
                android:id="@+id/js_try_Personal_Submit"
                style="@style/App_ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/buttonHeightLarge"
                android:layout_marginTop="@dimen/buttonHeightSmall"
                android:gravity="center"
                android:text="@string/submit"
                customfontdemo:fontName="MyriadPro-BoldCond.otf" />
        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/bottomblue_footer"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />
</LinearLayout>