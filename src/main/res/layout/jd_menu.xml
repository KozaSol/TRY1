<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:baselineAligned="false"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:background="#ffc600"
        android:layout_weight="0.54" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="#0086b7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="11.90"
        android:background="@drawable/bluebg"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/calltab"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="@color/transparent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/calltab_img"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:src="@drawable/call_icon" />

            <com.jobsearchtry.utils.MyTextView
                android:id="@+id/calltab_text"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="@string/callemp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/jd_footersize"
                android:textStyle="bold"
                customfontdemo:fontName="MyriadPro-Cond.ttf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/applytab"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="@color/transparent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/applytab_img"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:src="@drawable/applyjob_icon" />

            <com.jobsearchtry.utils.MyTextView
                android:id="@+id/applytab_text"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="@string/apply"
                android:textColor="@android:color/white"
                android:textSize="@dimen/jd_footersize"
                android:textStyle="bold"
                customfontdemo:fontName="MyriadPro-Cond.ttf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/js_mymessagetab"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="@color/transparent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/emailtab_img"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:src="@drawable/messagetab_icon" />

            <com.jobsearchtry.utils.MyTextView
                android:id="@+id/js_message_text"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="@string/email"
                android:textColor="@android:color/white"
                android:textSize="@dimen/jd_footersize"
                android:textStyle="bold"
                customfontdemo:fontName="MyriadPro-Cond.ttf" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mysocialsharetab"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="@color/transparent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:src="@drawable/share_icon" />

            <com.jobsearchtry.utils.MyTextView
                android:id="@+id/socialshare_text"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="@string/sharejob"
                android:textColor="@android:color/white"
                android:textSize="@dimen/jd_footersize"
                android:textStyle="bold"
                customfontdemo:fontName="MyriadPro-Cond.ttf" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>