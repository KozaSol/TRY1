<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    >

    <com.jobsearchtry.utils.MyTextView
        android:id="@+id/notificationlistDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="start"
        android:paddingLeft="3dp"
        android:shadowDx="1"
        android:shadowDy="1"
        android:textColor="#80333333"
        android:textSize="@dimen/textSize"
        android:visibility="gone"
        customfontdemo:fontName="MyriadPro-Cond.ttf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_notifi_listrow"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/notifyid"
            android:layout_width="0dip"
            android:layout_height="@dimen/buttonHeightNormal"
            android:layout_marginLeft="@dimen/logotb"
            android:layout_weight="0.15"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter" />

        <com.jobsearchtry.utils.MyTextView
            android:id="@+id/notification_message"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="2dp"
            android:layout_marginLeft="@dimen/Filter_Buttonsize"
            android:gravity="center|start"
            android:textColor="#006292"
            android:textSize="@dimen/notify_txt"
            customfontdemo:fontName="MyriadPro-Cond.ttf" />
    </LinearLayout>

</LinearLayout>