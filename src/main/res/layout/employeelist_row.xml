<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_appliedhistory"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/post_MarginTop"
        android:layout_marginRight="@dimen/divideheight"
        android:layout_marginTop="@dimen/emp_imgtop"
        android:layout_weight="8.4"
        android:orientation="vertical">

        <com.jobsearchtry.utils.MyTextView
            android:id="@+id/empname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#006292"
            android:textSize="@dimen/about_txtsize"
            customfontdemo:fontName="MyriadPro-Cond.ttf" />

        <com.jobsearchtry.utils.MyTextView
            android:id="@+id/empdesi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#000"
            android:textSize="@dimen/js_detailtxtsize"
            customfontdemo:fontName="MyriadPro-Cond.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cpb_stroke_width"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.02"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@drawable/location1_icon" />

            <com.jobsearchtry.utils.MyTextView
                android:id="@+id/emp_location_value"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.19"
                android:textColor="#745a01"
                android:textSize="@dimen/emp_listqualsize"
                customfontdemo:fontName="MyriadPro-Cond.ttf" />

            <com.jobsearchtry.utils.MyTextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.06"
                android:text="@string/quali"
                android:layout_marginLeft="@dimen/buttonHeightSmall"
                android:textColor="#3b3b3b"
                android:textSize="@dimen/textSizeSmall"
                customfontdemo:fontName="MyriadPro-Cond.ttf" />

            <com.jobsearchtry.utils.MyTextView
                android:id="@+id/sp_quali_value"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.08"
                android:textColor="#745a01"
                android:textSize="@dimen/emp_listqualsize"
                customfontdemo:fontName="MyriadPro-Cond.ttf" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/jsheaderdivide"
        android:layout_marginRight="@dimen/emp_imageright"
        android:layout_marginTop="@dimen/apptop"
        android:layout_weight="2"
        android:orientation="vertical">

        <com.jobsearchtry.utils.MyTextView
            android:layout_width="match_parent"
            android:layout_height="16.33dp"
            android:background="#000"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/experience"
            android:textColor="#fff"
            android:textSize="@dimen/emp_txtsize"
            customfontdemo:fontName="MyriadPro-Cond.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffc300"
            android:orientation="vertical">

            <com.jobsearchtry.utils.MyTextView
                android:id="@+id/emp_exp_years_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:gravity="center"
                android:text="5.0"
                android:textColor="#074a6b"
                android:textSize="@dimen/emp_exptxtsize"
                customfontdemo:fontName="MyriadPro-Cond.ttf" />

            <com.jobsearchtry.utils.MyTextView
                android:id="@+id/emp_exp_years"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cpb_stroke_width"
                android:layout_marginTop="-6dp"
                android:gravity="center|top"
                android:textColor="#000"
                android:textSize="@dimen/emp_yrstxtsize"
                customfontdemo:fontName="MyriadPro-BoldCond.otf" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>