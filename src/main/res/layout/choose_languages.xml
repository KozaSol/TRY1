<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdc201"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="@dimen/buttonHeightSmall"
        android:layout_weight="9"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/language_logo" />

        <com.jobsearchtry.utils.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/editboxpadding"
            android:text="@string/chooseurlang"
            android:textColor="#00212d"
            android:textSize="@dimen/chooselang"
            customfontdemo:fontName="MyriadPro-BoldCond.otf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divideheight"
            android:layout_marginLeft="@dimen/buttonHeightToSmall"
            android:layout_marginRight="@dimen/margintb"
            android:background="@drawable/langview_bg" />

        <ListView
            android:id="@+id/languageslist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/buttonHeightSmall"
            android:background="@color/transparent"
            android:divider="@null"
            android:listSelector="@android:color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/Button_Margintop"
        android:layout_marginTop="@dimen/buttonHeightSmall"
        android:orientation="vertical">

        <com.jobsearchtry.utils.MyButton
            android:id="@+id/languages_submit"
            style="@style/App_ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selectt"
            customfontdemo:fontName="MyriadPro-BoldCond.otf" />
    </LinearLayout>


</LinearLayout>