<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_listview"
    android:orientation="vertical">

    <com.jobsearchtry.utils.MyTextView
        android:id="@+id/designation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="#006292"
        android:textSize="@dimen/txtSizeHeader"
        customfontdemo:fontName="MyriadPro-Cond.ttf" />

    <com.jobsearchtry.utils.MyTextView
        android:id="@+id/companyname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="#000"
        android:textSize="@dimen/txtSizeSHeader"
        customfontdemo:fontName="MyriadPro-Cond.ttf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/subheaddivide"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dip"
            android:layout_height="@dimen/categorylr"
            android:layout_weight="0.02"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/date_icon" />

        <com.jobsearchtry.utils.MyTextView
            android:id="@+id/js_posteddate"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.08"
            android:gravity="center|start"
            android:maxLines="1"
            android:textColor="#745a01"
            android:textSize="@dimen/txtSizeMedium"
            customfontdemo:fontName="MyriadPro-Cond.ttf" />

        <ImageView
            android:layout_width="0dip"
            android:layout_height="@dimen/categorylr"
            android:layout_weight="0.02"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/location1_icon" />

        <com.jobsearchtry.utils.MyTextView
            android:id="@+id/location"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.14"
            android:gravity="center|start"
            android:textColor="#745a01"
            android:textSize="@dimen/txtSizeMedium"
            customfontdemo:fontName="MyriadPro-Cond.ttf" />

        <com.jobsearchtry.utils.MyTextView
            android:id="@+id/experience"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:gravity="center|end"
            android:textColor="#745a01"
            android:textSize="@dimen/txtSizeMedium"
            customfontdemo:fontName="MyriadPro-Cond.ttf" />
    </LinearLayout>
</LinearLayout>