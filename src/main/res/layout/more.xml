<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05354c"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/chooselanguages_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#092938"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/layoutmargintop"
                android:layout_weight="0.10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/myprofile_icon" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.jobsearchtry.utils.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_gravity="center|start"
                    android:layout_marginLeft="@dimen/marginleftright"
                    android:layout_weight="0.1"
                    android:text="@string/chooselanguages"
                    android:textColor="#fff"
                    android:textSize="@dimen/Text_size"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />

                <com.jobsearchtry.utils.MyTextView
                    android:id="@+id/changelangtamil"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_gravity="center|start"
                    android:layout_marginLeft="@dimen/marginleftright"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.1"
                    android:text="@string/changelangtamil"
                    android:textColor="#fff"
                    android:visibility="gone"
                    android:textSize="@dimen/Text_size"
                    customfontdemo:fontName="MyriadPro-Cond.ttf" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bl_postjob_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cpb_stroke_width"
            android:background="#092938"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/layoutmargintop"
                android:layout_weight="0.10"
                android:contentDescription="@string/app_name"
                android:src="@drawable/postjob_icon" />

            <com.jobsearchtry.utils.MyTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/marginleftright"
                android:layout_weight="1"
                android:text="@string/postajob"
                android:textColor="#fff"
                android:textSize="@dimen/Text_size"
                customfontdemo:fontName="MyriadPro-Cond.ttf" />
        </LinearLayout>

