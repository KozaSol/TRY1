<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dedede"
    android:orientation="vertical">

    <com.jobsearchtry.utils.MyTextView
        android:id="@+id/custompopupheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#086fa1"
        android:padding="@dimen/marginleftright"
        android:textColor="#fff"
        android:textSize="@dimen/textSize"
        customfontdemo:fontName="MyriadPro-Cond.ttf" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="#2e2e2e"
        android:orientation="horizontal" />


    <com.jobsearchtry.utils.MyTextView
        android:id="@+id/custom_popup_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="@dimen/marginleftright"
        android:textColor="#040404"
        android:textSize="@dimen/textSize"
        customfontdemo:fontName="MyriadPro-Cond.ttf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/jslogin_Buttonbottom"
        android:layout_marginTop="@dimen/alertdialog_left"
        android:orientation="vertical">

        <com.jobsearchtry.utils.MyButton
            android:id="@+id/custom_popup"
            style="@style/App_ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/ok"
            customfontdemo:fontName="MyriadPro-BoldCond.otf" />
    </LinearLayout>

</LinearLayout>